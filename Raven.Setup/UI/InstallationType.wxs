<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="InstallationType" Width="370" Height="270" Title="[ProductName] Setup">
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back" />
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel"/>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Installation type</Text>
        </Control>
        
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Select RavenDB installation type</Text>
        </Control>
        <Control Type="RadioButtonGroup"  Property="RAVEN_INSTALLATION_TYPE" Id="SelectType" Width="120" Height="42" X="56" Y="101">
          <RadioButtonGroup Property="RAVEN_INSTALLATION_TYPE">
            <RadioButton Text="IIS application" Value="IIS" Height="17" Width="120" X="0" Y="0" />
            <RadioButton Text="Windows Service" Value="SERVICE" Height="17" Width="120" X="0" Y="25" />
          </RadioButtonGroup>
          <Condition Action="hide"><![CDATA[NOT IISMAJORVERSION OR IISMAJORVERSION <= "#5"]]></Condition>
        </Control>
        <Control Type="Text" Id="noIISInfo" Width="280" Height="42" X="40" Y="120" Text="Installation as a service in only available because IIS is not installed." Hidden="yes">
          <Condition Action="show"><![CDATA[NOT IISMAJORVERSION]]></Condition>
        </Control>
        <Control Type="Text" Id="noSupportedIISInfo" Width="280" Height="42" X="30" Y="120" Text="Installation as a service in only available because installed version of IIS is not supported." Hidden="yes">
          <Condition Action="show"><![CDATA[IISMAJORVERSION AND IISMAJORVERSION <= "#5"]]></Condition>
        </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>